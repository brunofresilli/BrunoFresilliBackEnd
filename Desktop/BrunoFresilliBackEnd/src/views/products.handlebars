<div class="box">
    <h1>Productoss</h1>
    <h2>Bienvenido {{username}}</h2>
    
    
    <div class="cards-container">
      {{#if result.isValid}}
        <div>
        {{#each result.docs}}
            <div class="card">
                <h3>{{this.title}}</h3>
                <hr>
                <p>Categoria: {{this.category}}</p>
                <p>Descripci√≥n: {{this.description}}</p>
                <p>Precio: $ {{this.price}}</p>
                <button class="button-addCart" data-product-id = {{this._id}}  data-cart-id="{{../userId}}">agregar al carrito</button>
            </div>
        {{/each}}
        </div>
        <hr>
        <div>
            {{#if result.hasPrevPage}}
                <a href="{{result.prevLink}}"><< Anterior</a>
            {{/if}}
        </div>
        <br>
        <div>
            {{#if result.hasNextPage}}
                <a href="{{result.nextLink}}">Siguiente >></a>
            {{/if}}
        </div>
        <div>
            <a href="/cart?cid={{../userId}}">ir al carrito</a>
        </div>
    {{else}}
       <h2>No hay productos para mostrar</h2>
    {{/if}}
</div>
    </div>
</div>

